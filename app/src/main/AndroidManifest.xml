<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.wit.hogan_farm_machinery">

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:name=".main.MainApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.HoganFarmMachinery">
        <activity
            android:name=".activities.maps.ShowMapsActivity"
            android:label="@string/title_activity_tractor_maps"
            android:theme="@style/Theme.HoganFarmMachinery.NoActionBar">

        </activity>

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />

        <activity
            android:name=".activities.maps.AddMapsActivity"
            android:label="@string/title_activity_maps">

        </activity>
        <activity
            android:name=".activities.create_advert.PlaceAdActivity"
            android:label="@string/addTractor"
            android:theme="@style/Theme.HoganFarmMachinery.NoActionBar">

        </activity>

        <activity
            android:name=".activities.list.ListActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.HoganFarmMachinery.NoActionBar">
        </activity>

        <activity
            android:name=".activities.home.HomeActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.HoganFarmMachinery.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>